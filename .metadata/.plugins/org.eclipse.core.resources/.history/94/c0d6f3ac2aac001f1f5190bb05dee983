package br.com.treinamento.gerenciador.servlet;

import java.io.IOException;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import br.com.treinamento.gerenciador.acao.AlteraEmpresa;
import br.com.treinamento.gerenciador.acao.ListaEmpresas;
import br.com.treinamento.gerenciador.acao.MostraEmpresa;
import br.com.treinamento.gerenciador.acao.NovaEmpresa;
import br.com.treinamento.gerenciador.acao.RemoveEmpresa;

@WebServlet("/entrada")
public class EntradaServlet extends HttpServlet {
	private static final long serialVersionUID = 1L;

	
	protected void service(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		String paramAcao = request.getParameter("acao"); 
		
		String retorno = null;
		
        if(paramAcao.equals("ListaEmpresas")) {
            
        	ListaEmpresas listaEmpresa = new ListaEmpresas();
        	retorno = listaEmpresa.executar(request, response);
        	
        } else if(paramAcao.equals("RemoveEmpresa")) {
            
        	RemoveEmpresa removeEmpresa = new RemoveEmpresa();
        	retorno = removeEmpresa.remover(request, response);
        	
        } else if(paramAcao.equals("MostraEmpresa")) {
            
        	MostraEmpresa mostraEmpresa = new MostraEmpresa();
        	retorno = mostraEmpresa.mostrar(request, response);
        	
        } else if(paramAcao.equals("AlteraEmpresa")) {
            
        	AlteraEmpresa alteraEmpresa = new AlteraEmpresa();
        	retorno = alteraEmpresa.alterar(request, response);
        	
        } else if(paramAcao.equals("NovaEmpresa")) {
            
        	NovaEmpresa novaEmpresa = new NovaEmpresa();
        	retorno = novaEmpresa.criar(request, response);
        	
        }
        
        String[] tipoEendereco = retorno.split(":");
        
        if(tipoEendereco[0].equals("forward")) {
        	RequestDispatcher rd = request.getRequestDispatcher("WEB-INF/view/" + tipoEendereco[1]);
        	rd.forward(request, response);
        } else {
        	response.sendRedirect("WEB-INF/view/" + tipoEendereco[1]);
        }
        
	}

}
